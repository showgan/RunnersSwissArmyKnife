<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    android:textDirection="ltr"
    tools:context=".SpeedFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintlayoutWheels"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_wheels"
        android:layout_marginHorizontal="28dp"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:id="@+id/textViewTitleMinPerKm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:gravity="center"
            android:textSize="@dimen/wheel_title_text_size"
            android:textColor="@color/black"
            android:text="minutes\nper\nkm"
            app:layout_constraintStart_toStartOf="@id/wheel3dViewMinPerKm"
            app:layout_constraintEnd_toEndOf="@id/wheel3dViewMinPerKm"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/textViewTitleKmPerHour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:gravity="center"
            android:textSize="@dimen/wheel_title_text_size"
            android:textColor="@color/black"
            android:text="km\nper\nhour"
            app:layout_constraintStart_toStartOf="@id/wheel3dViewKmPerHour"
            app:layout_constraintEnd_toEndOf="@id/wheel3dViewKmPerHour"
            app:layout_constraintTop_toTopOf="@id/textViewTitleMinPerKm"/>
        <TextView
            android:id="@+id/textViewTitleMinPerMile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:gravity="center"
            android:textSize="@dimen/wheel_title_text_size"
            android:textColor="@color/black"
            android:text="minutes\nper\nmile"
            app:layout_constraintStart_toStartOf="@id/wheel3dViewMinPerMile"
            app:layout_constraintEnd_toEndOf="@id/wheel3dViewMinPerMile"
            app:layout_constraintTop_toTopOf="@id/textViewTitleMinPerKm"/>
        <TextView
            android:id="@+id/textViewTitleMilePerHour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:gravity="center"
            android:textSize="@dimen/wheel_title_text_size"
            android:textColor="@color/black"
            android:text="mile\nper\nhour"
            app:layout_constraintStart_toStartOf="@id/wheel3dViewMilePerHour"
            app:layout_constraintEnd_toEndOf="@id/wheel3dViewMilePerHour"
            app:layout_constraintTop_toTopOf="@id/textViewTitleMinPerKm"/>

        <com.cncoderx.wheelview.Wheel3DView
            android:id="@+id/wheel3dViewMinPerKm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/wheel_bg_color"
            android:layout_marginTop="0dp"
            android:layout_marginStart="10dp"
            app:wheelCyclic="true"
            app:wheelEntries="@array/default_array"
            app:wheelItemCount="11"
            app:wheelItemWidth="@dimen/wheel_item_width"
            app:wheelItemHeight="@dimen/wheel_item_height"
            app:wheelTextSize="@dimen/wheel_text_size"
            app:wheelTextColor="@color/wheel_text_color"
            app:wheelSelectedTextColor="@color/wheel_selected_text_color"
            app:wheelDividerColor="@color/wheel_divider_color"
            app:wheelHighlightColor="@color/wheel_highlight_color"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/wheel3dViewKmPerHour"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintTop_toBottomOf="@id/textViewTitleMinPerKm"/>
        <com.cncoderx.wheelview.Wheel3DView
            android:id="@+id/wheel3dViewKmPerHour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/wheel_bg_color"
            android:layout_marginStart="10dp"
            app:wheelCyclic="true"
            app:wheelEntries="@array/default_array"
            app:wheelItemCount="11"
            app:wheelItemWidth="@dimen/wheel_item_width"
            app:wheelItemHeight="@dimen/wheel_item_height"
            app:wheelTextSize="@dimen/wheel_text_size"
            app:wheelTextColor="@color/wheel_text_color"
            app:wheelSelectedTextColor="@color/wheel_selected_text_color"
            app:wheelDividerColor="@color/wheel_divider_color"
            app:wheelHighlightColor="@color/wheel_highlight_color"
            app:layout_constraintStart_toEndOf="@+id/wheel3dViewMinPerKm"
            app:layout_constraintEnd_toStartOf="@+id/wheel3dViewMinPerMile"
            app:layout_constraintTop_toTopOf="@id/wheel3dViewMinPerKm"/>
        <com.cncoderx.wheelview.Wheel3DView
            android:id="@+id/wheel3dViewMinPerMile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/wheel_bg_color"
            android:layout_marginStart="40dp"
            app:wheelCyclic="true"
            app:wheelEntries="@array/default_array"
            app:wheelItemCount="11"
            app:wheelItemWidth="@dimen/wheel_item_width"
            app:wheelItemHeight="@dimen/wheel_item_height"
            app:wheelTextSize="@dimen/wheel_text_size"
            app:wheelTextColor="@color/wheel_text_color"
            app:wheelSelectedTextColor="@color/wheel_selected_text_color"
            app:wheelDividerColor="@color/wheel_divider_color"
            app:wheelHighlightColor="@color/wheel_highlight_color"
            app:layout_constraintStart_toEndOf="@+id/wheel3dViewKmPerHour"
            app:layout_constraintEnd_toStartOf="@id/wheel3dViewMilePerHour"
            app:layout_constraintTop_toTopOf="@id/wheel3dViewMinPerKm"/>
        <com.cncoderx.wheelview.Wheel3DView
            android:id="@+id/wheel3dViewMilePerHour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/wheel_bg_color"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:wheelCyclic="true"
            app:wheelEntries="@array/default_array"
            app:wheelItemCount="11"
            app:wheelItemWidth="@dimen/wheel_item_width"
            app:wheelItemHeight="@dimen/wheel_item_height"
            app:wheelTextSize="@dimen/wheel_text_size"
            app:wheelTextColor="@color/wheel_text_color"
            app:wheelSelectedTextColor="@color/wheel_selected_text_color"
            app:wheelDividerColor="@color/wheel_divider_color"
            app:wheelHighlightColor="@color/wheel_highlight_color"
            app:layout_constraintStart_toEndOf="@+id/wheel3dViewMinPerMile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/wheel3dViewMinPerKm"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintlayoutValues"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:background="@drawable/bg_wheels"
        android:layout_marginHorizontal="8dp"
        android:padding="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintlayoutWheels">
        <TextView
            android:id="@+id/textViewTitleDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:text="Distance"
            android:minEms="5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/textViewTitleTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:text="Time"
            android:minEms="5"
            app:layout_constraintStart_toEndOf="@id/textViewTitleDistance"
            app:layout_constraintTop_toTopOf="@id/textViewTitleDistance"/>

        <TextView
            android:id="@+id/textViewTitle1k"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:gravity="center"
            android:textSize="20dp"
            android:minEms="3"
            android:text="1K"
            android:background="#22000000"
            app:layout_constraintStart_toStartOf="@id/textViewTitleDistance"
            app:layout_constraintEnd_toEndOf="@id/textViewTitleDistance"
            app:layout_constraintTop_toBottomOf="@+id/textViewTitleDistance"/>
        <TextView
            android:id="@+id/textViewTime1k"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:minEms="3"
            android:background="#22000000"
            app:layout_constraintStart_toStartOf="@id/textViewTitleTime"
            app:layout_constraintEnd_toEndOf="@+id/textViewTitleTime"
            app:layout_constraintTop_toTopOf="@id/textViewTitle1k"/>

        <TextView
            android:id="@+id/textViewTitle3k"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:gravity="center"
            android:layout_marginTop="6dp"
            android:textSize="20dp"
            android:minEms="3"
            android:text="3K"
            android:background="#22000000"
            app:layout_constraintStart_toStartOf="@id/textViewTitleDistance"
            app:layout_constraintEnd_toEndOf="@id/textViewTitleDistance"
            app:layout_constraintTop_toBottomOf="@+id/textViewTitle1k"/>
        <TextView
            android:id="@+id/textViewTime3k"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:minEms="3"
            android:background="#22000000"
            app:layout_constraintStart_toStartOf="@id/textViewTitleTime"
            app:layout_constraintEnd_toEndOf="@+id/textViewTitleTime"
            app:layout_constraintTop_toTopOf="@id/textViewTitle3k"/>

        <TextView
            android:id="@+id/textViewTitle5k"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:gravity="center"
            android:layout_marginTop="6dp"
            android:textSize="20dp"
            android:minEms="3"
            android:text="5K"
            android:background="#22000000"
            app:layout_constraintStart_toStartOf="@id/textViewTitleDistance"
            app:layout_constraintEnd_toEndOf="@id/textViewTitleDistance"
            app:layout_constraintTop_toBottomOf="@+id/textViewTitle3k"/>
        <TextView
            android:id="@+id/textViewTime5k"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:minEms="3"
            android:background="#22000000"
            app:layout_constraintStart_toStartOf="@id/textViewTitleTime"
            app:layout_constraintEnd_toEndOf="@+id/textViewTitleTime"
            app:layout_constraintTop_toTopOf="@id/textViewTitle5k"/>

        <TextView
            android:id="@+id/textViewTitle10k"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:gravity="center"
            android:layout_marginTop="6dp"
            android:textSize="20dp"
            android:minEms="3"
            android:text="10K"
            android:background="#22000000"
            app:layout_constraintStart_toStartOf="@id/textViewTitleDistance"
            app:layout_constraintEnd_toEndOf="@id/textViewTitleDistance"
            app:layout_constraintTop_toBottomOf="@+id/textViewTitle5k"/>
        <TextView
            android:id="@+id/textViewTime10k"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:minEms="3"
            android:background="#22000000"
            app:layout_constraintStart_toStartOf="@id/textViewTitleTime"
            app:layout_constraintEnd_toEndOf="@+id/textViewTitleTime"
            app:layout_constraintTop_toTopOf="@id/textViewTitle10k"/>

        <TextView
            android:id="@+id/textViewTitle21k"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:gravity="center"
            android:layout_marginTop="6dp"
            android:textSize="20dp"
            android:minEms="3"
            android:text="21K"
            android:background="#22000000"
            app:layout_constraintStart_toStartOf="@id/textViewTitleDistance"
            app:layout_constraintEnd_toEndOf="@id/textViewTitleDistance"
            app:layout_constraintTop_toBottomOf="@+id/textViewTitle10k"/>
        <TextView
            android:id="@+id/textViewTime21k"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:minEms="3"
            android:background="#22000000"
            app:layout_constraintStart_toStartOf="@id/textViewTitleTime"
            app:layout_constraintEnd_toEndOf="@+id/textViewTitleTime"
            app:layout_constraintTop_toTopOf="@id/textViewTitle21k"/>

        <TextView
            android:id="@+id/textViewTitle42k"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:gravity="center"
            android:layout_marginTop="6dp"
            android:textSize="20dp"
            android:minEms="3"
            android:text="42K"
            android:background="#22000000"
            app:layout_constraintStart_toStartOf="@id/textViewTitleDistance"
            app:layout_constraintEnd_toEndOf="@id/textViewTitleDistance"
            app:layout_constraintTop_toBottomOf="@+id/textViewTitle21k"/>
        <TextView
            android:id="@+id/textViewTime42k"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:minEms="3"
            android:background="#22000000"
            app:layout_constraintStart_toStartOf="@id/textViewTitleTime"
            app:layout_constraintEnd_toEndOf="@+id/textViewTitleTime"
            app:layout_constraintTop_toTopOf="@id/textViewTitle42k"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
