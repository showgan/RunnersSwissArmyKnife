<!--        app:layout_constraintTop_toTopOf="parent" />-->


    <TextView
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:gravity="center_vertical"
        android:background="#669911"
        android:text="请选择时间"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.pl.wheelview.WheelView
        android:id="@+id/timePicker"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        app:lineColor="#ff0000"
        app:maskDarkColor="#11000000"
        app:maskLightColor="#11000000"
        app:normalTextColor="#00ff00"
        app:selectedTextColor="#092BEA"
        app:lineHeight="1.7dp"
        app:normalTextSize="14dp"
        app:selectedTextSize="22dp"
        app:isCyclic="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/result"/>

</androidx.constraintlayout.widget.ConstraintLayout>
