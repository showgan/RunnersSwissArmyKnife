<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    android:textDirection="ltr"
    tools:context=".DistanceFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintlayoutWheels"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_wheels"
        android:layout_marginHorizontal="28dp"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:id="@+id/textViewTitleTime"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:padding="6dp"
            android:gravity="center"
            android:textSize="@dimen/wheel_title_text_size"
            android:textColor="@color/black"
            android:text="time"
            app:layout_constraintStart_toStartOf="@id/wheel3dViewTime"
            app:layout_constraintEnd_toEndOf="@id/wheel3dViewTime"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/textViewTitleDistanceKm"/>
        <TextView
            android:id="@+id/textViewTitleDistanceKm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:gravity="center"
            android:textSize="@dimen/wheel_title_text_size"
            android:textColor="@color/black"
            android:text="distance\nkm"
            app:layout_constraintStart_toStartOf="@id/wheel3dViewDistanceKm"
            app:layout_constraintEnd_toEndOf="@id/wheel3dViewDistanceKm"
            app:layout_constraintTop_toTopOf="@id/textViewTitleTime"/>
        <TextView
            android:id="@+id/textViewTitleDistanceMile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:gravity="center"
            android:textSize="@dimen/wheel_title_text_size"
            android:textColor="@color/black"
            android:text="distance\nmile"
            app:layout_constraintStart_toStartOf="@id/wheel3dViewDistanceMile"
            app:layout_constraintEnd_toEndOf="@id/wheel3dViewDistanceMile"
            app:layout_constraintTop_toTopOf="@id/textViewTitleTime"/>

        <com.cncoderx.wheelview.Wheel3DView
            android:id="@+id/wheel3dViewTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/wheel_bg_color"
            android:layout_marginTop="0dp"
            android:layout_marginStart="10dp"
            app:wheelCyclic="true"
            app:wheelEntries="@array/default_array"
            app:wheelItemCount="11"
            app:wheelItemWidth="@dimen/wheel_item_width_distance"
            app:wheelItemHeight="@dimen/wheel_item_height"
            app:wheelTextSize="@dimen/wheel_text_size"
            app:wheelTextColor="@color/wheel_text_color"
            app:wheelSelectedTextColor="@color/wheel_selected_text_color"
            app:wheelDividerColor="@color/wheel_divider_color"
            app:wheelHighlightColor="@color/wheel_highlight_color"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/wheel3dViewDistanceKm"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintTop_toBottomOf="@id/textViewTitleTime"/>
        <com.cncoderx.wheelview.Wheel3DView
            android:id="@+id/wheel3dViewDistanceKm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/wheel_bg_color"
            android:layout_marginStart="10dp"
            app:wheelCyclic="true"
            app:wheelEntries="@array/default_array"
            app:wheelItemCount="11"
            app:wheelItemWidth="@dimen/wheel_item_width_distance"
            app:wheelItemHeight="@dimen/wheel_item_height"
            app:wheelTextSize="@dimen/wheel_text_size"
            app:wheelTextColor="@color/wheel_text_color"
            app:wheelSelectedTextColor="@color/wheel_selected_text_color"
            app:wheelDividerColor="@color/wheel_divider_color"
            app:wheelHighlightColor="@color/wheel_highlight_color"
            app:layout_constraintStart_toEndOf="@+id/wheel3dViewTime"
            app:layout_constraintEnd_toStartOf="@+id/wheel3dViewDistanceMile"
            app:layout_constraintTop_toTopOf="@id/wheel3dViewTime"/>
        <com.cncoderx.wheelview.Wheel3DView
            android:id="@+id/wheel3dViewDistanceMile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/wheel_bg_color"
            android:layout_marginStart="10dp"
            app:wheelCyclic="true"
            app:wheelEntries="@array/default_array"
            app:wheelItemCount="11"
            app:wheelItemWidth="@dimen/wheel_item_width_distance"
            app:wheelItemHeight="@dimen/wheel_item_height"
            app:wheelTextSize="@dimen/wheel_text_size"
            app:wheelTextColor="@color/wheel_text_color"
            app:wheelSelectedTextColor="@color/wheel_selected_text_color"
            app:wheelDividerColor="@color/wheel_divider_color"
            app:wheelHighlightColor="@color/wheel_highlight_color"
            app:layout_constraintStart_toEndOf="@+id/wheel3dViewDistanceKm"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/wheel3dViewTime"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintlayoutValues"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:background="@drawable/bg_wheels"
        android:layout_marginHorizontal="8dp"
        android:padding="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintlayoutWheels">

        <TextView
            android:id="@+id/textViewTitlePace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:text="Pace"
            android:minEms="6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/textViewTitleSpeed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:text="Speed"
            android:minEms="6"
            app:layout_constraintStart_toEndOf="@id/textViewTitlePace"
            app:layout_constraintTop_toTopOf="@id/textViewTitlePace"/>
        <TextView
            android:id="@+id/textViewPaceKm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingTop="6dp"
            android:gravity="center"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:text="5:25"
            android:background="#22000000"
            app:layout_constraintStart_toStartOf="@id/textViewTitlePace"
            app:layout_constraintEnd_toEndOf="@id/textViewTitlePace"
            app:layout_constraintTop_toBottomOf="@+id/textViewTitlePace"/>
        <TextView
            android:id="@+id/textViewPaceKmLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingBottom="6dp"
            android:gravity="center"
            android:textSize="16dp"
            android:text="per km"
            android:background="#22000000"
            app:layout_constraintStart_toStartOf="@id/textViewTitlePace"
            app:layout_constraintEnd_toEndOf="@id/textViewTitlePace"
            app:layout_constraintTop_toBottomOf="@+id/textViewPaceKm"/>

        <TextView
            android:id="@+id/textViewPaceMile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingTop="6dp"
            android:gravity="center"
            android:layout_marginTop="6dp"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:text="8:43"
            android:background="#22000000"
            app:layout_constraintStart_toStartOf="@id/textViewTitlePace"
            app:layout_constraintEnd_toEndOf="@id/textViewTitlePace"
            app:layout_constraintTop_toBottomOf="@+id/textViewPaceKmLabel"/>
        <TextView
            android:id="@+id/textViewPaceMileLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingBottom="6dp"
            android:gravity="center"
            android:textSize="16dp"
            android:text="per mile"
            android:background="#22000000"
            app:layout_constraintStart_toStartOf="@id/textViewTitlePace"
            app:layout_constraintEnd_toEndOf="@id/textViewTitlePace"
            app:layout_constraintTop_toBottomOf="@+id/textViewPaceMile"/>

        <TextView
            android:id="@+id/textViewSpeedKm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingTop="6dp"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:text="11.08"
            android:background="#22000000"
            app:layout_constraintStart_toStartOf="@id/textViewTitleSpeed"
            app:layout_constraintEnd_toEndOf="@+id/textViewTitleSpeed"
            app:layout_constraintTop_toBottomOf="@+id/textViewTitleSpeed"/>
        <TextView
            android:id="@+id/textViewSpeedKmLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingBottom="6dp"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:textSize="16dp"
            android:text="km per hour"
            android:background="#22000000"
            app:layout_constraintStart_toStartOf="@id/textViewTitleSpeed"
            app:layout_constraintEnd_toEndOf="@+id/textViewTitleSpeed"
            app:layout_constraintTop_toBottomOf="@id/textViewSpeedKm"/>

        <TextView
            android:id="@+id/textViewSpeedMile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingTop="6dp"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:layout_marginTop="6dp"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:text="6.88"
            android:background="#22000000"
            app:layout_constraintStart_toStartOf="@id/textViewTitleSpeed"
            app:layout_constraintEnd_toEndOf="@+id/textViewTitleSpeed"
            app:layout_constraintTop_toBottomOf="@id/textViewSpeedKmLabel"/>
        <TextView
            android:id="@+id/textViewSpeedMileLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingBottom="6dp"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:textSize="16dp"
            android:text="miles per hour"
            android:background="#22000000"
            app:layout_constraintStart_toStartOf="@id/textViewTitleSpeed"
            app:layout_constraintEnd_toEndOf="@+id/textViewTitleSpeed"
            app:layout_constraintTop_toBottomOf="@id/textViewSpeedMile"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
