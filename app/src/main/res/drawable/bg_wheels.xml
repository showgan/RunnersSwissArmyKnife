<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outside border/shadow -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="0"
                android:startColor="#fbf7f7"
                android:endColor="#ddb7b7"/>
            <corners android:radius="8dp"/>
        </shape>
    </item>

    <!-- Inset -->
    <item
        android:top="2dp"
        android:left="2dp"
        android:right="2dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="45"
                android:startColor="#fbf7f7"
                android:endColor="#ccb7b7"/>
            <corners android:radius="4dp"/>
        </shape>
    </item>
</layer-list>
